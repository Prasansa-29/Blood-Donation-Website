@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
    <meta name="viewport" content="width=width=1366, initial-scale=1.0">
  <title>Blood Donation System</title>
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <style>
    /* Add your custom CSS styles here */
    /* Banner Slider */
    .banner-slider {
      height: 300px;
            background: url('https://images.pexels.com/photos/12193103/pexels-photo-12193103.jpeg') center/cover no-repeat;
    }

    /* Customizing Navbar */
    .navbar {
      background-color:  #8B0000; /* Dark Red */
    }

    .navbar-nav .nav-link {
      color: white !important;
    }

    /* Customizing Footer */
    footer {
      background-color: #8B0000; /* Dark Red */
      color: white;
    }

    /* Customizing Buttons */
    .btn-custom {
      background-color: #8B0000; /* Dark Red */
      border-color: #8B0000; /* Dark Red */
      color: white;
    }

    /* Centering Buttons */
    .btn-container {
      text-align: center;
    }

    .btn-container button {
      margin: 5px;
    }
  </style>
</head>
<body>

<!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-darkred">

  <a class="navbar-brand" href="#"><img src="logo.png" alt="Logo" height="30"></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
                    <a class="nav-link" <a asp-controller="Programs" asp-action="HospitalList">Hospitals </a>
      </li>
      <li class="nav-item">
                    <a class="nav-link" <a asp-controller="Programs" asp-action="OrganizationList"> Organizations</a>
      </li>
      <li class="nav-item">
                    <a class="nav-link" <a asp-controller="Programs" asp-action="Events">Events covered</a>
      </li>
    </ul>
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
</nav>

<!-- Banner Slider -->
<div id="carouselExampleControls" class="carousel slide banner-slider" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
                <img src="https://images.pexels.com/photos/12193103/pexels-photo-12193103.jpeg" class="d-block w-100" alt="Banner 1">
    </div>
    <div class="carousel-item">
                <img src="https://images.pexels.com/photos/13009643/pexels-photo-13009643.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="d-block w-100" alt="Banner 2">
    </div>
    <div class="carousel-item">
                <img src="https://images.pexels.com/photos/12193105/pexels-photo-12193105.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="d-block w-100" alt="Banner 3">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>




<!-- Footer Section -->
<footer class="bg-dark text-light mt-5 py-4">
        <div class="row btn-container">
            <div class="col-md-3">
                <a class="btn btn-custom btn-lg" asp-controller="Home" asp-action="BloodDonation">DONATE BLOOD </a> 
            </div>
            <div class="col-md-3">
                <a class="btn btn-custom btn-lg" asp-controller="Home" asp-action="DonateFunds">DONATE FUNDS</a>
            </div>
            <div class="col-md-3">
                <a class="btn btn-custom btn-lg" asp-controller="Home" asp-action="BloodRequest">REQUEST BLOOD</a>
            </div>
            <div class="col-md-3">
                <a class="btn btn-custom btn-lg" asp-controller="Home" asp-action="Registration">REGISTER or LOGIN </a>
            </div>
        </div>
        
       
 
</footer>

<!-- Bootstrap JS and jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
